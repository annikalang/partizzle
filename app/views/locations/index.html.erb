<div class="banner">
  <div class="container1">
    <h1 class="bannertext" >Book now!</h1>
    <h3 class="bannertext">Find your favourite party location!</h3>

      <form action="" id="myform" style="width: 100%;">
        <div class="choices">
        <input id="searchbar" class="aform" type="text" name="search" placeholder="Type to search..." style="flex-grow: 1;" autocomplete="on">
          <button class="abutton" type="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
              <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z">
              </path>
            </svg>
          </button>
        </div>
        <div id="create"><%=link_to "List a Location", new_location_path, class: "wrapper-gradient" %>
        </div>
      </form>
<div class="filter_options">
 <h2 class="main_filter">Filters</h2>
<div class="filter">
  <h3>Price</h3>
<select id="dropdown">
  <option value="98"></option>
  <%@locations.each do |location|%>
  <option value="98"><%=location.price%>,00€ / night</option>
<%end%>
</select>
</div>

<div class="filter">
  <h3>Rating</h3>
<select id="dropdown_reviews">
  <option value="98"></option>
  <option value="98"><span id = "pineapple-rating">🍍</span></option>
  <option value="98"><span id = "pineapple-rating">🍍🍍</span></option>
  <option value="98"><span id = "pineapple-rating">🍍🍍🍍</span></option>
  <option value="98"><span id = "pineapple-rating">🍍🍍🍍🍍</span></option>
  <option value="98"><span id = "pineapple-rating">🍍🍍🍍🍍🍍</span></option>
</select>
</div>
</div>

<div class="container">
  <div class="row" id="row">
    <%@locations.each do |location|%>
      <div class="col-12 col-6">
        <div style="background-image: url(<%= cl_image_path location.photo, width: 350, crop: :fill %>)" class="cards">
          <div class="card-description">
            <div class="background">
              <div class="col-12 col-6">
            <h4><%=link_to location.title, location_path(location)%></h4>
            <div class="review-cards-f">
            <% sum = 0 %>
            <%location.reviews.each do |review| %>
            <p>Rating: <% review.rating.to_i.times { %>🍍<% } %></p>
            <span id = "pineapple-rating"></span>
            <%end%>
          </div>

            <p><%=location.address%></p>
            <p><%=location.description%></p>
            <br>
            <h6 class="price"><strong class="price_tag"><%=location.price%>,00€ / night</strong></h6>
          </div>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="footer">
  <div class="footer-links">
    <i class="fab fa-github"></i>
    <i class="fab fa-instagram"></i>
    <i class="fab fa-facebook"></i>
    <i class="fab fa-twitter"></i>
    <i class="fab fa-linkedin"></i>
  </div>
</div>



