<%= image_tag('livingroom.jpeg', alt: "User's location", class: 'listingpicture') %>

<div class="container2">
<h1><%=@location.title%></h1>
<p>Description: <%=@location.description%></p>
<ul>
  <li>Address: <%=@location.address%></li>
  <li>Size: <%=@location.size%> sq m</li>
  <li>Price: â‚¬ <%=@location.price%></li>
</ul>
